{
  "preset": "jest-preset-angular",
  "transformIgnorePatterns": [
    "node_modules/(?!.*\\.mjs$)"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/src/test-setup.ts"
  ],
  "testMatch": [
    "**/src/app/**/*.spec.ts"
  ],
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1",
    "@shared/(.*)": "<rootDir>/src/app/shared/$1",
    "@shared/ui/(.*)": "<rootDir>/src/app/shared/ui/$1",
    "@shared/models/(.*)": "<rootDir>/src/app/shared/models/$1",
    "@assets/(.*)": "<rootDir>/src/app/assets/$1"
  }
}

